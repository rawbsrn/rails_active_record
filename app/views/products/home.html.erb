<h1>Products</h1>

  <h2>Products of the USA</h2>
    <% if @products.united_states.any? %>
    <ul>
          <% @products.united_states.each do |product| %>
            <li><%= link_to product.name, product_path(product) %></li>
              <% end %>
            </ul>
          <% else %>
        <p>There are no products from the USA yet.</p>
          <% end %>
        <h2>Recently Updated Products</h2>
    <% if @products.recent_products.any? %>
    <ul>
          <% @products.recent_products.each do |product| %>
            <li><%= link_to product.name, product_path(product) %></li>
              <% end %>
            </ul>
          <% else %>
        <p>There are no recent products yet.</p>
          <% end %>
        <h2>Most Reviewed Products</h2>
    <% if @products.review_ratings.any? %>
    <ul>
          <% @products.review_ratings.each do |product| %>
            <li><%= link_to product.name, product_path(product) %></li>
              <% end %>
            </ul>
          <% else %>
        <p>There are no reviewed products yet.</p>
          <% end %>

          <% if user_signed_in? %>
          <%= link_to current_user.email, edit_user_registration_path %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
          <p><%= link_to "Change your password", edit_user_registration_path %>
        <% else %>
          <%= link_to "Log in", new_user_session_path %>
          <%= link_to "Register", new_user_registration_path %>
        <% end %>
          <% if current_user && current_user.admin %>
<p><%= link_to "Create new product", new_product_path %></p>
<% end %>

<p><%= link_to "View all products", products_path %></p>