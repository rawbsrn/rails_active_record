<div class="container-fluid">
<div class="p-3 mb-2 bg-info text-dark">
<h1>Name: <%= @product.name %></h1>
<h3>Cost: <%= @product.cost %></h3>
<h3>Origin: <%= @product.country_of_origin %></h3>

<% if @product.reviews.any? %>
  <h4>Here are the reviews for this product:</h4>

  <% @product.reviews.each do |review| %>
    <ul>
      <li>
        <%= link_to review.author, product_review_path(@product, review) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>No reviews are listed for this product.</p>
<% end %>

<button><%= link_to "Add a review", new_product_review_path(@product) %></butt>
<% if current_user && current_user.admin %>
<button><%= link_to "Edit", edit_product_path(@product) %></button>
<button><%= link_to "Delete product", product_path(@product),
                        :data => {:confirm => "Are you sure?",
                                       :method => "delete"} %></button>
                                       <% end %>
<button><%= link_to "Return to products", products_path %></button>
</div>
</div>